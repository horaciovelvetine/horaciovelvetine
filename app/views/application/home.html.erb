                  <div id="rootLeftContainer"></div>
            </div>
          </div>
          <!-- End left column area -->
        </div>
      </div>

      <div class="bg-white lg:min-w-0 lg:flex-1">
        <div class="h-full py-6 px-4 sm:px-6 lg:px-8">
          <!-- Start main area-->
          <div class="relative h-full" style="min-height: 36rem;">
            <div class="absolute inset-0 border-2 rounded-lg">
                  <div id="rootMainContainer"></div>
            </div>
          </div>
          <!-- End main area -->
        </div>
      </div>
    </div>

  </div>


